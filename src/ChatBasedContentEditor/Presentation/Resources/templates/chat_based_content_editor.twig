{% extends '@common.presentation/base_appshell.html.twig' %}

{% block title %}{{ 'editor.title'|trans }}{% endblock %}

{% block content %}
    {# Heartbeat controller to track user presence (prevents stale conversation locks) - skip for read-only #}
    {% if not readOnly %}
        <div {{ stimulus_controller('conversation-heartbeat', {
                 heartbeatUrl: path('chat_based_content_editor.presentation.heartbeat', { conversationId: conversation.id }),
                 interval: 10000
             }) }}></div>
    {% endif %}

    <div class="space-y-6"
         {{ stimulus_controller('chat-based-content-editor', {
             runUrl: runUrl,
             pollUrlTemplate: pollUrlTemplate,
             cancelUrlTemplate: cancelUrlTemplate,
             conversationId: conversation.id,
             contextUsage: contextUsage,
             contextUsageUrl: contextUsageUrl,
             activeSession: activeSession,
             turns: turns,
             readOnly: readOnly,
             translations: {
                 aiBudget: 'js.editor.ai_budget'|trans,
                 estimatedCost: 'js.editor.estimated_cost'|trans,
                 sendError: 'js.editor.send_error'|trans,
                 networkError: 'js.editor.network_error'|trans,
                 pollError: 'js.editor.poll_error'|trans,
                 connectionRetry: 'js.editor.connection_retry'|trans,
                 makeChanges: 'js.editor.make_changes'|trans,
                 makingChanges: 'js.editor.making_changes'|trans,
                 noResponse: 'js.editor.no_response'|trans,
                 working: 'js.editor.working'|trans,
                 thinking: 'js.editor.thinking'|trans,
                 askingAi: 'js.editor.asking_ai'|trans,
                 aiResponseReceived: 'js.editor.ai_response_received'|trans,
                 unknownError: 'js.editor.unknown_error'|trans,
                 allSet: 'js.editor.all_set'|trans,
                 inProgress: 'js.editor.in_progress'|trans,
                stop: 'js.editor.stop'|trans,
                stopping: 'js.editor.stopping'|trans,
                cancelled: 'js.editor.cancelled'|trans
             },
             prefillMessage: prefillMessage|default(''),
         }) }}
            {{ stimulus_action('chat-based-content-editor', 'handleSuggestionInsert', 'prompt-suggestions:insert') }}>

        {# Flash messages #}
        {% for message in app.flashes('success') %}
            <div class="rounded-md bg-green-50 dark:bg-green-900/20 p-4">
                <p class="text-sm text-green-700 dark:text-green-400">{{ message }}</p>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="rounded-md bg-red-50 dark:bg-red-900/20 p-4">
                <p class="text-sm text-red-700 dark:text-red-400">{{ message }}</p>
            </div>
        {% endfor %}

        {# Workspace status banners #}
        {% if workspace and workspace.status.name == 'PROBLEM' %}
            <div class="rounded-md bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                        </svg>
                    </div>
                    <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800 dark:text-red-200">{{ 'editor.problem.title'|trans }}</h3>
                        <p class="mt-1 text-sm text-red-700 dark:text-red-300">{{ 'editor.problem.description'|trans }}</p>
                        <form method="POST" action="{{ path('chat_based_content_editor.presentation.reset_workspace', { workspaceId: workspace.id }) }}" class="mt-2">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('workspace_reset') }}">
                            <button type="submit" class="text-sm font-medium text-red-800 dark:text-red-200 hover:text-red-700 dark:hover:text-red-100 underline">
                                {{ 'editor.problem.reset_work_area'|trans }}
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        {% endif %}

        {% if workspace and workspace.status.name == 'IN_REVIEW' %}
            <div class="rounded-md bg-purple-50 dark:bg-purple-900/20 border border-purple-200 dark:border-purple-800 p-4">
                <div class="flex">
                    <div class="flex-shrink-0">
                        <svg class="h-5 w-5 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                    </div>
                    <div class="ml-3 flex-1">
                        <h3 class="text-sm font-medium text-purple-800 dark:text-purple-200">{{ 'editor.review.title'|trans }}</h3>
                        <p class="mt-1 text-sm text-purple-700 dark:text-purple-300">{{ 'editor.review.description'|trans }}</p>
                        {% if workspace.githubPrUrl %}
                            <p class="mt-2">
                                <a href="{{ workspace.githubPrUrl }}" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-1.5 text-sm font-medium text-purple-800 dark:text-purple-200 hover:text-purple-900 dark:hover:text-purple-100 underline">
                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                                        <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                                    </svg>
                                    {{ 'editor.review.open_link'|trans }}
                                </a>
                            </p>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endif %}

        {# Action buttons - always visible, right-aligned above header #}
        <div class="flex flex-wrap justify-end items-center gap-2">
            {% if canEdit %}
                <form method="POST" action="{{ path('chat_based_content_editor.presentation.finish', { conversationId: conversation.id }) }}" class="inline">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('conversation_finish') }}">
                    <button type="submit" class="etfswui-button-secondary">
                        {{ 'editor.end_session'|trans }}
                    </button>
                </form>
                <form method="POST" action="{{ path('chat_based_content_editor.presentation.send_to_review', { conversationId: conversation.id }) }}" class="inline">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('conversation_review') }}">
                    <button type="submit" class="etfswui-button-default">
                        {{ 'editor.send_for_review'|trans }}
                    </button>
                </form>
            {% endif %}
            <a href="{{ path('project_mgmt.presentation.list') }}" class="etfswui-link-as-button-secondary">
                {{ 'common.back_to_projects'|trans }}
            </a>
        </div>

        {# Main content area - side-by-side on wide screens #}
        {% set hasRemoteAssets = workspace and not readOnly and project and project.remoteContentAssetsManifestUrls|length > 0 %}
        <div class="flex flex-col 2xl:flex-row 2xl:gap-8 2xl:items-start">
            {# Chat column - takes full width, or ~2/3 on wide screens #}
            <div class="flex-1 min-w-0 space-y-6 {{ hasRemoteAssets ? '2xl:max-w-[65%]' : '' }}"
                 {% if workspace and not readOnly %}
                 {{ stimulus_controller('html-editor', {
                     loadUrl: path('chat_based_content_editor.presentation.page_content', { workspaceId: workspace.id }),
                     saveUrl: path('chat_based_content_editor.presentation.save_page', { workspaceId: workspace.id }),
                     workspaceId: workspace.id,
                     translations: {
                         editing: 'editor.html_editor_editing'|trans,
                         saveChanges: 'editor.html_editor_save_changes'|trans,
                         close: 'editor.html_editor_close'|trans,
                         saving: 'editor.html_editor_saving'|trans,
                         saveSuccess: 'editor.html_editor_save_success'|trans,
                         saveError: 'editor.html_editor_save_error'|trans,
                         loadError: 'editor.html_editor_load_error'|trans
                     }
                 }) }}
                 {{ stimulus_action('html-editor', 'openEditor', 'html-editor:open') }}
                 {% endif %}>
                {% if workspace and not readOnly %}
                    <input type="hidden" name="_html_editor_csrf_token" value="{{ csrf_token('html_editor_save') }}">
                {% endif %}

                {# Chat area - slides up when HTML editor is open #}
                <div {{ stimulus_target('html-editor', 'chatArea') }} class="grid grid-rows-[1fr] transition-[grid-template-rows] duration-300 ease-in-out">
                    <div class="overflow-hidden">
                        <div class="space-y-6">
                            {# Header with project context (title only, buttons moved above) #}
                            <div>
                                <h1 class="text-2xl font-semibold text-dark-900 dark:text-dark-100">{{ 'editor.title'|trans }}</h1>
                        {% if project %}
                            <p class="text-dark-600 dark:text-dark-400 mt-1">
                                {{ 'editor.working_on'|trans({'%project%': project.name})|raw }}
                            </p>
                        {% else %}
                            <p class="text-dark-600 dark:text-dark-400 mt-1">{{ 'editor.description'|trans }}</p>
                        {% endif %}
                    </div>

                    <div>
                        <div {{ stimulus_target('chat-based-content-editor', 'messages') }}
                             class="rounded-lg border border-dark-200 dark:border-dark-700 bg-white dark:bg-dark-800 p-4 min-h-[320px] max-h-[500px] 2xl:max-h-[600px] overflow-y-auto space-y-4">
                            {% if turns is empty %}
                                <p class="text-dark-500 dark:text-dark-400 text-sm">{{ 'editor.conversation_placeholder'|trans }}</p>
                            {% else %}
                                {% for turn in turns %}
                                    <div class="flex justify-end">
                                        <div class="max-w-[85%] rounded-lg px-4 py-2 bg-primary-100 dark:bg-primary-900/30 text-dark-900 dark:text-dark-100 text-sm {{ turn.status == 'cancelled' ? 'opacity-60' : '' }}">{{ turn.instruction }}</div>
                                    </div>
                                    <div class="flex justify-start">
                                        {# Note: Markdown rendering is handled by chat_based_content_editor_controller.ts #}
                                        {# to avoid race conditions with technical container rendering #}
                                        <div class="max-w-[85%] rounded-lg px-4 py-2 bg-dark-100 dark:bg-dark-700/50 text-dark-800 dark:text-dark-200 text-sm {{ turn.status == 'failed' ? 'border-l-2 border-red-500 pl-2' : '' }} {{ turn.status == 'cancelled' ? 'border-l-2 border-amber-500 pl-2' : '' }}"
                                             data-turn-response="{{ turn.response ?: '' }}"></div>
                                    </div>
                                {% endfor %}
                            {% endif %}
                        </div>
                        <div class="flex justify-end mt-2">
                            <label class="inline-flex items-center gap-1.5 text-xs text-dark-600 dark:text-dark-400 cursor-pointer select-none">
                                <input type="checkbox"
                                       {{ stimulus_target('chat-based-content-editor', 'autoScroll') }}
                                       {{ stimulus_action('chat-based-content-editor', 'toggleAutoScroll', 'change') }}
                                       checked
                                       class="rounded border-dark-300 dark:border-dark-600 text-primary-600 focus:ring-primary-500 dark:focus:ring-offset-dark-800 w-3.5 h-3.5">
                                <span>{{ 'editor.auto_scroll'|trans }}</span>
                            </label>
                        </div>
                    </div>

                    {# Context usage indicator - hide for read-only (no ongoing budget tracking) #}
                    {% if not readOnly %}
                        <div {{ stimulus_target('chat-based-content-editor', 'contextUsage') }} class="space-y-1">
                            <div class="flex items-center justify-between text-xs text-dark-600 dark:text-dark-400">
                                <span {{ stimulus_target('chat-based-content-editor', 'contextUsageText') }}>AI budget: {{ contextUsage.usedTokens|number_format(0, '', ',') }} of {{ contextUsage.maxTokens|number_format(0, '', ',') }} used</span>
                                <span {{ stimulus_target('chat-based-content-editor', 'contextUsageCost') }} class="font-medium">Est. ${{ contextUsage.totalCost|number_format(4, '.', ',') }}</span>
                            </div>
                            <div class="h-1.5 w-full rounded-full bg-dark-200 dark:bg-dark-600 overflow-hidden">
                                <div {{ stimulus_target('chat-based-content-editor', 'contextUsageBar') }}
                                     class="h-full rounded-full bg-primary-500 dark:bg-primary-400 transition-[width] duration-300"
                                     style="width: {{ contextUsage.maxTokens > 0 ? min(100 * contextUsage.usedTokens / contextUsage.maxTokens, 100) : 0 }}%"></div>
                            </div>
                        </div>
                    {% endif %}

                    {% if canEdit %}
                        <form {{ stimulus_action('chat-based-content-editor', 'handleSubmit', 'submit') }}
                              class="space-y-4">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('chat_based_content_editor_run') }}">
                            <div>
                                <label for="instruction" class="block text-sm font-medium text-dark-700 dark:text-dark-300 mb-1">{{ 'editor.input_label'|trans }}</label>
                                <textarea {{ stimulus_target('chat-based-content-editor', 'instruction') }}
                                          {{ stimulus_action('chat-based-content-editor', 'handleKeydown', 'keydown') }}
                                          name="instruction"
                                          id="instruction"
                                          rows="3"
                                          required
                                          placeholder="{{ 'editor.input_placeholder'|trans }}"
                                          class="w-full px-3 py-2 border border-dark-300 dark:border-dark-600 rounded-md bg-white dark:bg-dark-800 text-dark-900 dark:text-dark-100 text-sm"></textarea>
                            </div>
                            <div class="flex items-center gap-4">
                                <button type="submit"
                                        {{ stimulus_target('chat-based-content-editor', 'submit') }}
                                        class="px-4 py-2 rounded-md bg-primary-600 text-white text-sm font-medium hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:focus:ring-offset-dark-900 disabled:opacity-50 disabled:cursor-not-allowed">
                                    {{ 'editor.make_changes'|trans }}
                                </button>
                                <button type="button"
                                        {{ stimulus_target('chat-based-content-editor', 'cancelButton') }}
                                        {{ stimulus_action('chat-based-content-editor', 'handleCancel') }}
                                        class="hidden px-4 py-2 rounded-md bg-red-600 text-white text-sm font-medium hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 dark:focus:ring-offset-dark-900 disabled:opacity-50 disabled:cursor-not-allowed">
                                    {{ 'editor.stop'|trans }}
                                </button>
                                <label class="inline-flex items-center gap-1.5 text-sm text-dark-600 dark:text-dark-400 cursor-pointer select-none">
                                    <input type="checkbox"
                                           {{ stimulus_target('chat-based-content-editor', 'submitOnEnter') }}
                                           {{ stimulus_action('chat-based-content-editor', 'toggleSubmitOnEnter', 'change') }}
                                           checked
                                           class="rounded border-dark-300 dark:border-dark-600 text-primary-600 focus:ring-primary-500 dark:focus:ring-offset-dark-800">
                                    <span>{{ 'editor.submit_on_enter'|trans }}</span>
                                </label>
                            </div>
                        </form>

                        {% include '@chat_based_content_editor.presentation/_prompt_suggestions.twig' %}
                    {% else %}
                            <div class="rounded-md bg-dark-100 dark:bg-dark-700/50 p-4">
                                <p class="text-sm text-dark-600 dark:text-dark-400">
                                    {% if conversation.status.value == 'finished' %}
                                        {{ 'editor.session_finished'|trans }}
                                    {% else %}
                                        {{ 'editor.cannot_edit'|trans }}
                                    {% endif %}
                                </p>
                            </div>
                        {% endif %}
                        </div>{# end space-y-6 #}
                    </div>{# end overflow-hidden #}
                </div>{# end chatArea grid #}

                {# HTML Editor section - slides down when opened #}
                {% if workspace and not readOnly %}
                    {# HTML Editor Container - collapsed by default, includes title #}
                    <div {{ stimulus_target('html-editor', 'container') }} class="grid grid-rows-[0fr] transition-[grid-template-rows] duration-300 ease-in-out">
                        <div class="overflow-hidden">
                            <div class="space-y-4 pt-6">
                                <h1 class="text-2xl font-semibold text-dark-900 dark:text-dark-100">{{ 'editor.html_editor_title'|trans }}</h1>

                                {# Page name display #}
                                <div class="flex items-center gap-2 text-sm">
                                    <span class="text-dark-500 dark:text-dark-400">{{ 'editor.html_editor_editing'|trans }}</span>
                                    <span {{ stimulus_target('html-editor', 'pageNameDisplay') }} class="font-medium text-dark-900 dark:text-dark-100"></span>
                                </div>

                                {# Loading indicator #}
                                <div {{ stimulus_target('html-editor', 'loading') }} class="hidden py-8 text-center text-dark-500 dark:text-dark-400">
                                    <svg class="animate-spin h-6 w-6 mx-auto mb-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                                        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                                        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                                    </svg>
                                    {{ 'common.loading'|trans }}
                                </div>

                                {# Error message #}
                                <div {{ stimulus_target('html-editor', 'error') }} class="hidden rounded-md bg-red-50 dark:bg-red-900/20 p-3 text-sm text-red-700 dark:text-red-400"></div>

                                {# Success message #}
                                <div {{ stimulus_target('html-editor', 'success') }} class="hidden rounded-md bg-green-50 dark:bg-green-900/20 p-3 text-sm text-green-700 dark:text-green-400"></div>

                                {# Textarea for HTML editing #}
                                <textarea {{ stimulus_target('html-editor', 'textarea') }}
                                          class="w-full h-96 font-mono text-sm border border-dark-300 dark:border-dark-600 rounded-md p-3 bg-white dark:bg-dark-800 text-dark-900 dark:text-dark-100 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500"></textarea>

                                {# Action buttons #}
                                <div class="flex gap-3">
                                    <button type="button"
                                            {{ stimulus_target('html-editor', 'saveButton') }}
                                            {{ stimulus_action('html-editor', 'saveChanges', 'click') }}
                                            class="px-4 py-2 rounded-md bg-primary-600 text-white text-sm font-medium hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:focus:ring-offset-dark-900 disabled:opacity-50 disabled:cursor-not-allowed">
                                        {{ 'editor.html_editor_save_changes'|trans }}
                                    </button>
                                    <button type="button"
                                            {{ stimulus_target('html-editor', 'closeButton') }}
                                            {{ stimulus_action('html-editor', 'closeEditor', 'click') }}
                                            class="px-4 py-2 rounded-md border border-dark-300 dark:border-dark-600 text-dark-700 dark:text-dark-300 text-sm font-medium hover:bg-dark-100 dark:hover:bg-dark-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:focus:ring-offset-dark-900 disabled:opacity-50 disabled:cursor-not-allowed">
                                        {{ 'editor.html_editor_close'|trans }}
                                    </button>
                                </div>
                            </div>{# end space-y-4 #}
                        </div>{# end overflow-hidden #}
                    </div>{# end container grid #}
                {% endif %}

                {# Preview pages section - visible for both edit and read-only modes #}
                {% if workspace %}
                    <div {{ stimulus_controller('dist-files', {
                             pollUrl: path('chat_based_content_editor.presentation.dist_files', { workspaceId: workspace.id }),
                             pollInterval: 3000,
                             readOnly: readOnly,
                             photoBuilderUrlPattern: (not readOnly and workspace and project) ? (path('photo_builder.presentation.show', { workspaceId: workspace.id }) ~ '?page=__PAGE_PATH__&conversationId=' ~ conversation.id) : '',
                             photoBuilderLabel: 'photo_builder.generate_matching_images'|trans,
                             editHtmlLabel: 'editor.edit_html'|trans,
                             previewLabel: 'editor.preview'|trans,
                         }) }}
                         {{ stimulus_target('dist-files', 'container') }}
                         class="border-t border-dark-200 dark:border-dark-700 pt-6 hidden">

                        {# Preview Pages card #}
                        <div class="etfswui-card">
                            <div class="etfswui-card-content flex items-start gap-4">
                                <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center">
                                    <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418" />
                                    </svg>
                                </div>
                                <div class="flex-1 min-w-0">
                                    <h3 class="text-sm font-semibold text-dark-900 dark:text-dark-100">{{ 'editor.preview_pages'|trans }}</h3>
                                    <p class="etfswui-text-small mt-0.5">{{ 'editor.preview_pages_description'|trans }}</p>
                                    <ul {{ stimulus_target('dist-files', 'list') }} class="mt-3 divide-y divide-dark-100 dark:divide-dark-700/50"></ul>
                                </div>
                            </div>
                        </div>

                        {# PhotoBuilder CTA card - shown when photoBuilderUrlPattern is configured #}
                        <div {{ stimulus_target('dist-files', 'photoBuilderSection') }} class="mt-4 hidden">
                            <div class="etfswui-card">
                                <div class="etfswui-card-content flex items-start gap-4">
                                    <div class="flex-shrink-0 w-10 h-10 rounded-lg bg-purple-100 dark:bg-purple-900/30 flex items-center justify-center">
                                        <svg class="w-5 h-5 text-purple-600 dark:text-purple-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M6.827 6.175A2.31 2.31 0 0 1 5.186 7.23c-.38.054-.757.112-1.134.175C2.999 7.58 2.25 8.507 2.25 9.574V18a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9.574c0-1.067-.75-1.994-1.802-2.169a47.865 47.865 0 0 0-1.134-.175 2.31 2.31 0 0 1-1.64-1.055l-.822-1.316a2.192 2.192 0 0 0-1.736-1.039 48.774 48.774 0 0 0-5.232 0 2.192 2.192 0 0 0-1.736 1.039l-.821 1.316Z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 12.75a4.5 4.5 0 1 1-9 0 4.5 4.5 0 0 1 9 0ZM18.75 10.5h.008v.008h-.008V10.5Z" />
                                        </svg>
                                    </div>
                                    <div class="flex-1 min-w-0">
                                        <h3 class="text-sm font-semibold text-dark-900 dark:text-dark-100">{{ 'editor.photo_builder_heading'|trans }}</h3>

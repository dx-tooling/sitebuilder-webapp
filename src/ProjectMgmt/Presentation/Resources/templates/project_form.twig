{% extends '@common.presentation/base_appshell.html.twig' %}

{% block title %}{{ project ? 'Edit Project' : 'Add Project' }}{% endblock %}

{% block content %}
    <div class="max-w-2xl mx-auto space-y-6">
        <div>
            <h1 class="text-2xl font-semibold text-dark-900 dark:text-dark-100">{{ project ? 'Edit project' : 'Add project' }}</h1>
            <p class="text-dark-600 dark:text-dark-400 mt-1">{{ project ? 'Update the details below.' : 'Add a project so we can start making changes.' }}</p>
        </div>

        {% for message in app.flashes('error') %}
            <div class="rounded-md bg-red-50 dark:bg-red-900/20 p-4">
                <p class="text-sm text-red-700 dark:text-red-400">{{ message }}</p>
            </div>
        {% endfor %}

        <form method="POST"
              action="{{ project ? path('project_mgmt.presentation.update', { id: project.id }) : path('project_mgmt.presentation.create') }}"
              class="space-y-6 bg-white dark:bg-dark-800 rounded-lg border border-dark-200 dark:border-dark-700 p-6">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token(project ? 'project_update' : 'project_create') }}">

            <div>
                <label for="name" class="block text-sm font-medium text-dark-700 dark:text-dark-300 mb-1">Project name</label>
                <input type="text"
                       name="name"
                       id="name"
                       value="{{ project ? project.name : '' }}"
                       required
                       placeholder="My Website"
                       class="w-full px-3 py-2 border border-dark-300 dark:border-dark-600 rounded-md bg-white dark:bg-dark-800 text-dark-900 dark:text-dark-100 text-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
            </div>

            <div>
                <label for="git_url" class="block text-sm font-medium text-dark-700 dark:text-dark-300 mb-1">Project link</label>
                <input type="url"
                       name="git_url"
                       id="git_url"
                       value="{{ project ? project.gitUrl : '' }}"
                       required
                       placeholder="https://github.com/org/repo.git"
                       class="w-full px-3 py-2 border border-dark-300 dark:border-dark-600 rounded-md bg-white dark:bg-dark-800 text-dark-900 dark:text-dark-100 text-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                <p class="mt-1 text-xs text-dark-500 dark:text-dark-400">Paste the GitHub repository URL for this project.</p>
            </div>

            <div>
                <label for="github_token" class="block text-sm font-medium text-dark-700 dark:text-dark-300 mb-1">GitHub access key</label>
                <input type="password"
                       name="github_token"
                       id="github_token"
                       value="{{ project ? project.githubToken : '' }}"
                       required
                       placeholder="ghp_xxxxxxxxxxxx"
                       class="w-full px-3 py-2 border border-dark-300 dark:border-dark-600 rounded-md bg-white dark:bg-dark-800 text-dark-900 dark:text-dark-100 text-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                <p class="mt-1 text-xs text-dark-500 dark:text-dark-400">A personal access token so we can open the project and save changes.</p>
            </div>

            {% set currentImage = project ? project.agentImage : 'node:22-slim' %}
            {% set standardImages = ['node:22-slim', 'node:20-slim', 'node:18-slim', 'python:3.12-slim', 'php:8.4-cli'] %}
            {% set isCustomImage = currentImage not in standardImages %}

            <div>
                <label for="agent_image" class="block text-sm font-medium text-dark-700 dark:text-dark-300 mb-1">Runtime environment</label>
                <select name="agent_image"
                        id="agent_image"
                        class="w-full px-3 py-2 border border-dark-300 dark:border-dark-600 rounded-md bg-white dark:bg-dark-800 text-dark-900 dark:text-dark-100 text-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                    <option value="node:22-slim" {{ currentImage == 'node:22-slim' ? 'selected' : '' }}>Node.js 22 (recommended)</option>
                    <option value="node:20-slim" {{ currentImage == 'node:20-slim' ? 'selected' : '' }}>Node.js 20</option>
                    <option value="node:18-slim" {{ currentImage == 'node:18-slim' ? 'selected' : '' }}>Node.js 18</option>
                    <option value="python:3.12-slim" {{ currentImage == 'python:3.12-slim' ? 'selected' : '' }}>Python 3.12</option>
                    <option value="php:8.4-cli" {{ currentImage == 'php:8.4-cli' ? 'selected' : '' }}>PHP 8.4</option>
                    <option value="custom" {{ isCustomImage ? 'selected' : '' }}>Custom image...</option>
                </select>
                <p class="mt-1 text-xs text-dark-500 dark:text-dark-400">Select the runtime environment for building and running your project.</p>
            </div>

            <div id="custom_image_container" class="{{ isCustomImage ? '' : 'hidden' }}">
                <label for="custom_agent_image" class="block text-sm font-medium text-dark-700 dark:text-dark-300 mb-1">Custom Docker image</label>
                <input type="text"
                       name="custom_agent_image"
                       id="custom_agent_image"
                       value="{{ isCustomImage ? currentImage : '' }}"
                       placeholder="myregistry/myimage:tag"
                       class="w-full px-3 py-2 border border-dark-300 dark:border-dark-600 rounded-md bg-white dark:bg-dark-800 text-dark-900 dark:text-dark-100 text-sm focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500">
                <p class="mt-1 text-xs text-dark-500 dark:text-dark-400">Enter a Docker image name with tag (e.g., node:latest, myregistry.io/myimage:v1).</p>
            </div>

            <script>
                document.getElementById('agent_image').addEventListener('change', function() {
                    const customContainer = document.getElementById('custom_image_container');
                    const customInput = document.getElementById('custom_agent_image');
                    if (this.value === 'custom') {
                        customContainer.classList.remove('hidden');
                        customInput.required = true;
                    } else {
                        customContainer.classList.add('hidden');
                        customInput.required = false;
                    }
                });
            </script>

            <div class="rounded-lg border border-dark-200 dark:border-dark-700 bg-dark-50 dark:bg-dark-800 p-4 text-sm text-dark-600 dark:text-dark-400 space-y-3">
                <p>
                    Need a GitHub access key? Create a <strong>Personal Access Token</strong> so the app can read and update your project.
                </p>
                <div class="bg-white dark:bg-dark-900 rounded-md p-3 border border-dark-200 dark:border-dark-600">
                    <p class="font-medium text-dark-800 dark:text-dark-200 mb-2">Required permissions (fine-grained token):</p>
                    <ul class="list-disc list-inside space-y-1 text-dark-600 dark:text-dark-400">
                        <li><strong>Contents</strong>: Read and write</li>
                        <li><strong>Pull requests</strong>: Read and write</li>
                    </ul>
                </div>
                <div class="bg-white dark:bg-dark-900 rounded-md p-3 border border-dark-200 dark:border-dark-600">
                    <p class="font-medium text-dark-800 dark:text-dark-200 mb-2">Alternative: classic token</p>
                    <ul class="list-disc list-inside space-y-1 text-dark-600 dark:text-dark-400">
                        <li>Select the <strong>repo</strong> scope</li>
                    </ul>
                </div>
                <p class="text-xs text-dark-500 dark:text-dark-500">
                    Create a token at: <a href="https://github.com/settings/tokens" target="_blank" rel="noopener noreferrer" class="text-primary-600 dark:text-primary-400 hover:underline">github.com/settings/tokens</a>
                </p>
            </div>

            <div class="flex items-center justify-end gap-3 pt-4 border-t border-dark-200 dark:border-dark-700">
                <a href="{{ path('project_mgmt.presentation.list') }}"
                   class="px-4 py-2 rounded-md border border-dark-300 dark:border-dark-600 text-dark-700 dark:text-dark-300 text-sm font-medium hover:bg-dark-100 dark:hover:bg-dark-700 focus:outline-none focus:ring-2 focus:ring-primary-500">
                    Cancel
                </a>
                <button type="submit"
                        class="px-4 py-2 rounded-md bg-primary-600 text-white text-sm font-medium hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:focus:ring-offset-dark-900">
                    {{ project ? 'Update project' : 'Add project' }}
                </button>
            </div>
        </form>
    </div>
{% endblock content %}

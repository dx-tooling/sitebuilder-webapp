{% extends '@common.presentation/base_appshell.html.twig' %}

{% block title %}Review Center{% endblock %}

{% block content %}
    <div class="space-y-6">
        <div>
            <h1 class="text-2xl font-semibold text-dark-900 dark:text-dark-100">Review center</h1>
            <p class="text-dark-600 dark:text-dark-400 mt-1">Review changes and decide what happens next.</p>
        </div>

        {% for message in app.flashes('success') %}
            <div class="rounded-md bg-green-50 dark:bg-green-900/20 p-4">
                <p class="text-sm text-green-700 dark:text-green-400">{{ message }}</p>
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="rounded-md bg-red-50 dark:bg-red-900/20 p-4">
                <p class="text-sm text-red-700 dark:text-red-400">{{ message }}</p>
            </div>
        {% endfor %}

        {% if workspacesWithProject is empty %}
            <div class="text-center py-12">
                <svg class="mx-auto h-12 w-12 text-dark-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <h3 class="mt-2 text-sm font-medium text-dark-900 dark:text-dark-100">Nothing to review</h3>
                <p class="mt-1 text-sm text-dark-500 dark:text-dark-400">All caught up. No changes are waiting for review.</p>
            </div>
        {% else %}
            <div class="space-y-4">
                {% for item in workspacesWithProject %}
                    <div class="bg-white dark:bg-dark-800 rounded-lg border border-dark-200 dark:border-dark-700 p-6">
                        <div class="flex items-start justify-between">
                            <div class="space-y-1">
                                <h3 class="text-lg font-medium text-dark-900 dark:text-dark-100">{{ item.project.name }}</h3>
                                <p class="text-sm text-dark-500 dark:text-dark-400">
                                    Work area: <code class="px-1 py-0.5 bg-dark-100 dark:bg-dark-700 rounded text-xs">{{ item.workspace.branchName ?? 'N/A' }}</code>
                                </p>
                                <p class="text-sm text-dark-500 dark:text-dark-400">
                                    Project link: {{ item.project.gitUrl }}
                                </p>
                            </div>
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800 dark:bg-purple-900 dark:text-purple-200">
                                Review in progress
                            </span>
                        </div>

                        <div class="mt-6 flex items-center gap-3">
                            <form method="POST" action="{{ path('workspace_mgmt.presentation.review_merge', { workspaceId: item.workspace.id }) }}" class="inline">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('review_merge') }}">
                                <button type="submit"
                                        class="inline-flex items-center px-4 py-2 rounded-md bg-green-600 text-white text-sm font-medium hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 dark:focus:ring-offset-dark-900">
                                    <svg class="w-4 h-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                    Mark as done
                                </button>
                            </form>

                            <form method="POST" action="{{ path('workspace_mgmt.presentation.review_unlock', { workspaceId: item.workspace.id }) }}" class="inline">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('review_unlock') }}">
                                <button type="submit"
                                        class="inline-flex items-center px-4 py-2 rounded-md border border-dark-300 dark:border-dark-600 text-dark-700 dark:text-dark-300 text-sm font-medium hover:bg-dark-100 dark:hover:bg-dark-700 focus:outline-none focus:ring-2 focus:ring-primary-500">
                                    <svg class="w-4 h-4 mr-1.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 11V7a4 4 0 118 0m-4 8v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2z" />
                                    </svg>
                                    Reopen for changes
                                </button>
                            </form>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock content %}

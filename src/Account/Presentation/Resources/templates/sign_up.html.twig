{% extends '@common.presentation/base_appshell.html.twig' %}

{% block content %}
    <h1 class="etfswui-pagetitle mb-10 text-center">{{ 'account.sign_up.title'|trans }}</h1>
    <div class="etfswui-card max-w-md mx-auto mb-8">
        <div class="etfswui-card-content">
            {% for message in app.flashes('error') %}
                <div class="etfswui-alert etfswui-alert-danger mb-6">
                    <div class="etfswui-alert-body">
                        <p class="etfswui-alert-danger-text">{{ message }}</p>
                    </div>
                </div>
            {% endfor %}

            {% for message in app.flashes('success') %}
                <div class="etfswui-alert etfswui-alert-success mb-6">
                    <div class="etfswui-alert-body">
                        <p class="etfswui-alert-success-text">{{ message }}</p>
                    </div>
                </div>
            {% endfor %}

            <form action="{{ path('account.presentation.sign_up') }}" method="post" class="space-y-6">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('sign_up') }}">

                <div>
                    <label for="email" class="etfswui-form-label">{{ 'common.email'|trans }}</label>
                    <input id="email" name="email" type="email" required
                           class="etfswui-form-input"
                           placeholder="{{ 'account.sign_in.placeholder_email'|trans }}">
                </div>

                <div>
                    <label for="password" class="etfswui-form-label">{{ 'common.password'|trans }}</label>
                    <input id="password" name="password" type="password" required
                           class="etfswui-form-input"
                           placeholder="{{ 'account.sign_in.placeholder_password'|trans }}">
                </div>

                <div>
                    <label for="password_confirm" class="etfswui-form-label">{{ 'account.sign_up.confirm_password'|trans }}</label>
                    <input id="password_confirm" name="password_confirm" type="password" required
                           class="etfswui-form-input"
                           placeholder="{{ 'account.sign_up.placeholder_confirm_password'|trans }}">
                </div>

                <div class="etfswui-card-actions">
                    <a href="{{ path('account.presentation.sign_in') }}" class="etfswui-link-as-button-secondary">
                        {{ 'account.sign_up.back_to_sign_in'|trans }}
                    </a>
                    <button type="submit" class="etfswui-button-default">
                        {{ 'account.sign_up.create_account'|trans }}
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="etfswui-alert etfswui-alert-info max-w-md mx-auto">
        <div class="etfswui-alert-body">
            <p class="etfswui-alert-info-text font-normal">
                {{ 'account.sign_in.early_access'|trans|raw }}
            </p>
        </div>
    </div>
{% endblock content %}

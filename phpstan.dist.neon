includes:
    - vendor/enterprise-tooling-for-symfony/shared-bundle/config/phpstan.app.dist.neon

parameters:
    # Use container cache directory for better performance in Docker
    # This avoids slow writes to the mounted project directory
    # The directory is created automatically by PHPStan if it doesn't exist
    tmpDir: /tmp/container-home/.cache/phpstan
    paths:
        - bin/
        - config/
        - public/
        - src/
        - tests/
        - migrations/
    excludePaths:
        analyse:
            - tests/Architecture/*
            - config/reference.php
            - public/workspaces/*
